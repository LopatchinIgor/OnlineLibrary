@using OnlineLibrary.Web.Models
@using OnlineLibrary.DataAccess.Entities
@model RoleEditModel
@{ ViewBag.Title = "Edit Role";}
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <div class="panel panel-info">
        <div class="panel-heading">Add to role "@Model.Role.Name"</div>
        <table class="table table-striped">
            @if (!Model.NonMembers.Any())
            {
                <tr><td colspan="2">All users have this role.</td></tr>
            }
            else {
                <tr><td>User</td><td>Add to role</td></tr>
                foreach (var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Remove from role "@Model.Role.Name"</div>
        <table class="table table-striped">
            @if (!Model.Members.Any())
                {
                <tr><td colspan="2">No users have this role.</td></tr>
            }
            else {
                <tr><td>User</td><td>Remove from role</td></tr>
                foreach (var user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
        <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
}
<div class="alert alert-warning" style="margin-top: 15px" role="alert"><strong>Warning!</strong> If you change your own role you will be signed out and signed in back!</div>