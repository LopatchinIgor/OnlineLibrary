@model IEnumerable<OnlineLibrary.Web.Models.LoanRequestViewModel>

@{
    ViewBag.Title = "Loan Requests";
}

<h2>@ViewBag.Title</h2><br/>

<table class="table">
    <colgroup>
        <col width="20%"/>
        <col width="60%"/>
        <col width="20%"/>
    </colgroup>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                <!-- Trigger Button for ApproveModal -->
                <button type="button"  class="btn btn-primary btn-sm approve" data-toggle="modal" data-target="#approveModal" data-loan-request-id="@item.LoanRequestId">
                    Approve
                </button>

                <!-- Trigger Button for RejectModal -->
                <button type="button" class="btn btn-danger btn-sm reject" data-toggle="modal" data-target="#rejectModal" data-loan-request-id="@item.LoanRequestId">
                    Reject
                </button>
            </td>
</tr>
}
</table>

<!-- Approve Modal  -->
<div class="modal fade" id="approveModal" tabindex="-1" role="dialog" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="approveModalLabel">Approve the current loan request</h4>
            </div>
            <div class="modal-body form-inline">
                <label> Please Enter the book identifier </label>
                <form id="approve" action="@Url.Action("ApproveLoanRequest", "Librarian")" method="post">
                    <input id="bookId" name="bookId" type="text" class="form-control" />
                    <input id="loanRequestId" name="loanRequestId" hidden ="hidden"/>
                    <button type="submit" class="btn btn-default">ok</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </form>
            </div>
         </div>
    </div>
</div>

<!-- Reject Modal  -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="approveModalLabel">Reject the current loan request</h4>
            </div>

            <div class="modal-body">
                <label>Are you sure you want to reject this loan request ?</label>
            </div>
            <div class="modal-footer">
                <form id="reject" action="@Url.Action("RejectLoanRequest", "Librarian")" method="post">
                    <input id="loanRequestId" name="loanRequestId" hidden="hidden" />
                    <button type="submit" class="btn btn-default">ok</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

   
@section scripts {
    <script src="~/Scripts/View Scripts/Librarian/index.js"></script>
}