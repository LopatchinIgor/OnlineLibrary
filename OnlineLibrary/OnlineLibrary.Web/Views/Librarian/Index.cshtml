@model IEnumerable<OnlineLibrary.Web.Models.LoanRequestViewModel>

@{
    ViewBag.Title = "Loan Requests";
}

<h2>@ViewBag.Title</h2><br/>

<table class="table">
    <colgroup>
        <col width="20%"/>
        <col width="60%"/>
        <col width="20%"/>
    </colgroup>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                <!-- Trigger Button for ApproveModal -->
                <button type="button"  class="btn btn-primary btn-sm approve" data-toggle="modal" data-target="#approveModal" data-loan-request="@item.LoanRequestId">
                    Approve
                </button>

                <!-- Trigger Button for RejectModal -->
                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#rejectModal">
                    Reject
                </button>
            </td>
</tr>
}
</table>

<!-- Approve Modal  -->
<div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-labelledby="approveModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="approveModalLabel">Approve the current loan request</h4>
            </div>
            <div class="modal-body">
                <form id="approve" action="@Url.Action("ApproveLoanRequest", "Librarian")" method="post">
                    <label> Please Enter the book identifier </label>
                    <input id="bookId" name="bookId" type="text" />
                    <input id="loadRequestId" name="loadRequestId" hidden ="hidden"/>
                    <input type="submit" value="Ok" />
                </form>
            </div>
    </div>
</div>

@section scripts {
    <script>
    $( document ).ready(function() {
        $(".approve").click(function () {
            var requestId = $(this).data('loanRequest');
            $("#approve").find('input[id="loadRequestId"]').val(requestId);
        });
    });
    </script>
}