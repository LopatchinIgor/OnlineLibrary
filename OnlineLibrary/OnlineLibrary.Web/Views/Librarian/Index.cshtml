                    <button type="submit" class="btn btn-primary btn-sm">
                        Return
                    </button>
                </form>
                <form action="@Url.Action("LibrarianController", "LostBook")" method="post">
                    <input type="hidden" name="loadId" value="@loan.LoanId" />
                    <button type="submit" class="btn btn-primary btn-sm">
                        Lost
                    </button>
                </form>
            </td>
        </tr>
    }
