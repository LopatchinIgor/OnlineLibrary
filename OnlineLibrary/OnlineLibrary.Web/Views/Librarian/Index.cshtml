@model OnlineLibrary.Web.Models.LibrarianLoansViewModels.LoansViewModel

@{
    ViewBag.Title = "User loans manage ";
}

<h2>@ViewBag.Title</h2><br/>

@* Pending loans *@
<div class="panel-heading">
    <h3 class="panel-title">
        <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
        <strong>Pending loans</strong>
    </h3>
</div>
<table class="table">
        <colgroup>
            <col width="30%" />
            <col width="30%" />
            <col width="30%" />
        </colgroup>
    <tr>
        <th>
            <label>User Name</label>
        </th>
        <th>
            <label>Book Title</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PendingLoans) {
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                <!-- Trigger Button for ApproveModal -->
                <button type="button"  class="btn btn-primary btn-sm approve" data-toggle="modal" data-target="#approveModal" data-loan-request-id="@item.LoanId">
                    Approve
                </button>

                <!-- Trigger Button for RejectModal -->
                <button type="button" class="btn btn-danger btn-sm reject" data-toggle="modal" data-target="#rejectModal" data-loan-request-id="@item.LoanId">
                    Reject
                </button>
            </td>
    </tr>
    }
</table>

@* Approved loans *@
   <div class="panel-heading">
    <h3 class="panel-title">
        <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
        <strong>Approved loans</strong>
    </h3>
    </div>
    <table class="table">
        <colgroup>
            <col width="30%" />
            <col width="30%" />
            <col width="30%" />
        </colgroup>
        <tr>
            <th>
                <label>User Name</label>
            </th>
            <th>
                <label>Book Title</label>
            </th>
            <th></th>
        </tr>

        @foreach (var loan in Model.ApprovedLoans)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => loan.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => loan.BookTitle)
        </td>
        <td>
            <form action="@Url.Action("PerformLoan", "Librarian")" method="post">
                <input type="hidden" name="loanId" value="@loan.LoanId" />
                <button type="submit" class="btn btn-primary btn-sm">
                    Loan
                </button>
            </form>
        </td>
    </tr>
    }
    </table>

    @* Loaned books *@
    <div class="panel-heading">
    <h3 class="panel-title">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        Loaned books
    </h3>
    </div>
    <table class="table">
        <colgroup>
            <col width="30%" />
            <col width="30%" />
            <col width="30%" />
        </colgroup>
        <tr>
            <th>
                <label>User Name</label>
            </th>
            <th>
                <label>Book Title</label>
            </th>
            <th></th>
        </tr>

    @foreach (var loan in Model.LoanedBooks)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => loan.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => loan.BookTitle)
        </td>
        <td>
           <div class="form-inline">
            <form class="form-group" action="@Url.Action("ReturnBook", "Librarian")" method="post">
                <input type="hidden" name="loanId" value="@loan.LoanId" />
                <button type="submit" class="btn btn-primary btn-sm">
                    Return
                </button>
            </form>
            <form  class="form-group" action="@Url.Action("LostBook", "Librarian")" method="post">
                <input type="hidden" name="loanId" value="@loan.LoanId" />
                <button type="submit" class="btn btn-primary btn-sm">
                    Lost
                </button>
            </form>
               </div>
        </td>
    </tr>
    }
    </table>

    @* Rejected loans *@
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
            <strong>Rejected loans</strong>
        </h3>
    </div>
    <table class="table">
        <colgroup>
            <col width="30%" />
            <col width="60%" />

        </colgroup>
        <tr>
            <th>
                <label>User Name</label>
            </th>
            <th>
                <label>Book Title</label>
            </th>
        </tr>

        @foreach (var loan in Model.RejectedLoans)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => loan.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => loan.BookTitle)
        </td>
    </tr>
    }
    </table>

    @* Returned books *@
    <div class="panel-heading">
    <h3 class="panel-title">
        <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
        <strong>Returned loans</strong>
    </h3>
</div>
    <table class="table">
        <colgroup>
            <col width="30%" />
            <col width="60%" />

        </colgroup>
        <tr>
            <th>
                <label>User Name</label>
            </th>
            <th>
                <label>Book Title</label>
            </th>
        </tr>

        @foreach (var loan in Model.ReturnedBooks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => loan.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => loan.BookTitle)
                </td>
            </tr>
        }
    </table>
    @* Lost books *@
    <div class="panel-heading">
    <h3 class="panel-title">
        <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
        <strong>Rejected loans</strong>
    </h3>
    <table class="table">
        <colgroup>
            <col width="30%" />
            <col width="60%" />
        </colgroup>
        <tr>
            <th>
                <label>User Name</label>
            </th>
            <th>
                <label>Book Title</label>
            </th>
        </tr>

        @foreach (var loan in Model.LostBooks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => loan.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => loan.BookTitle)
                </td>
            </tr>
        }
    </table>

    <!-- Approve Modal  -->
    <div class="modal fade" id="approveModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="approveModalLabel">Approve the current loan request</h4>
                </div>
                <div class="modal-body form-inline">
                    <label> Please Enter the book identifier </label>
                    <form id="approve" action="@Url.Action("ApproveLoanRequest", "Librarian")" method="post">
                        <input id="bookCopyId" name="bookCopyId" type="text" class="form-control" />
                        <input id="loanRequestId" name="loanRequestId" hidden="hidden" />
                        <button type="submit" class="btn btn-default">ok</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Reject Modal  -->
    <div class="modal fade" id="rejectModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="approveModalLabel">Reject the current loan request</h4>
                </div>

                <div class="modal-body">
                    <label>Are you sure you want to reject this loan request ?</label>
                </div>
                <div class="modal-footer">
                    <form id="reject" action="@Url.Action("RejectLoanRequest", "Librarian")" method="post">
                        <input id="loanRequestId" name="loanRequestId" hidden="hidden" />
                        <button type="submit" class="btn btn-default">ok</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    @section scripts {
        <script src="~/Scripts/View Scripts/Librarian/index.js"></script>
    }
