@using OnlineLibrary.Web.Models.HomeViewModels
@model BooksListViewModel
@{
    ViewBag.Title = "Home Page";
}

@section CSS {
    <link href="~/Content/Views stylesheets/Home/Index.css" rel="stylesheet" />
}

<div class="row page-header">
    <form id="searchFilters" action="@Url.Action("Index", "Home")" method="post">
        <div class="form-inline">
            <div class="form-group">
                @Html.LabelFor(m => m.SearchData.Title, new { @class = "label-control" })
                @Html.TextBoxFor(m => m.SearchData.Title, new { @class = "form-control", placeholder = "E.g. Harry Potter" })
            </div>
            <button type="submit" class="btn btn-primary">Search <span class="glyphicon glyphicon-search"></span></button>
            <a type="button" data-toggle="collapse" href="#searchDetails">View additional fields</a>
        </div>
        <div class="collapse" id="searchDetails">
            <div class="form-horizontal col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchData.Author, new { @class = "control-label col-sm-3" })
                    @Html.TextBoxFor(m => m.SearchData.Author, new { @class = "form-control col-sm-9" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchData.PublishDate, new { @class = "control-label col-sm-3" })
                    @Html.TextBoxFor(m => m.SearchData.PublishDate, new { @class = "form-control col-sm-9" })
                </div>
            </div>
            <div class="form-horizontal col-md-6 ">
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchData.ISBN, new { @class = "control-label col-sm-3" })
                    @Html.TextBoxFor(m => m.SearchData.ISBN, new { @class = "form-control col-sm-9" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SearchData.Description, new { @class = "control-label col-sm-3" })
                    @Html.TextBoxFor(m => m.SearchData.Description, new { @class = "form-control col-sm-9" })
                </div>
            </div>
        </div>        
    </form>
</div>

<div class="row">
    @if (Model.Books.Count() == 0)
    {
        <h4>Sorry, no books were found...</h4>
    }
    <div class="col-md-8 col-md-offset-2">
        
        @foreach (var book in Model.Books)
        {
            <div class="panel panel-default book-item">
                <div class="panel-body">
                    <div class="media">
                        <div class="media-left">
                            <a href="@Url.RouteUrl("Default", new { controller = "BookDetails", action = "Index", id = book.Id })">
                                <img class="media-object book-cover" src="@Url.Content(book.FrontCover)" alt="@book.Title">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@Html.RouteLink(book.Title, new { controller = "BookDetails", action = "Index", id = book.Id })</h4>
                            <p><strong>@((book.Authors.Count() > 1) ? "Authors:" : "Author:")</strong> @String.Join(", ", book.Authors)</p>
                            <p><strong>Publish Date:</strong> @book.PublishDate.ToShortDateString()</p>
                            <p><strong>Description:</strong> @((book.Description.Length > 265) ? book.Description.Substring(0, 265) + "..." : book.Description) </p>
                            <p>
                                <strong>Categories:</strong>
                                <ul class="book-categories">
                                    @foreach (CategoryViewModel category in book.Categories)
                                    {
                                        <li>
                                            <span class="label label-default">@category.Category</span> > <span class="label label-info">@category.SubCategory</span>
                                        </li>
                                    }
                                </ul>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>