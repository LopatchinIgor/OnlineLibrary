@using OnlineLibrary.Web.Models.BooksManagement
@model IEnumerable<BookManagementViewModel>
@{
    ViewBag.Title = "Book List";
}

<h2>List of books</h2>

@section CSS{
    <link href="~/Content/Views stylesheets/BooksManagement/Index.css" rel="stylesheet" />
}

<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-xs-1"></th>
            <th class="col-xs-4">Title</th>
            <th class="col-xs-2">ISBN</th>
            <th class="col-xs-2">Publish Date</th>
            <th class="col-xs-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(book.FrontCover)" alt="Book cover" class="img-responsive" />
                </td>
                <td>@book.Title</td>
                <td>@book.ISBN</td>
                <td>@book.PublishDate.ToShortDateString()</td>
                <td class="text-center">
                    <a href="@Url.Action("CreateEdit", "BooksManagement", new { id = book.Id })" class="btn btn-default btn-sm">
                        Edit
                    </a>

                    @using (Html.BeginForm("DeleteBook", "BooksManagement", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@book.Id" />
                        <input type="submit" class="btn btn-danger btn-sm" value="Remove" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>